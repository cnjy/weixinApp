.container{
  display:flex;
  flex-direction: column;
}

.head-image{
  width:100%;
  height:460rpx;
}

.author-date{
  display: flex;
  align-items: center;
  margin-top:20rpx;
  margin-left:30rpx;
  
}
.avatar{
  width:64rpx;
  height:64rpx;
}

.author{
  font-size:30rpx;
  font-weight: bold;
  color:#666;
  margin-left:30rpx;
}

.const-text{
  font-size:24rpx;
  color:#666;
  margin-left:20rpx;
}

.date{
  font-size:24rpx;
  color:#666;
  margin-left:20rpx;
}

.title{
  margin-top:30rpx;
  margin-left:30rpx;
  font-size:36rpx;
  font-weight: bold;
  color:#333;
  letter-spacing: 4rpx;
}

.tool{
  margin-top:20rpx;
}
.circle-img{
  margin-right:40rpx;
  float:right;
  display: flex;
}
.circle-img image{
  width:90rpx;
  height:90rpx;
}
.share-img{
  margin-left:30rpx;
  width:90rpx;
  height:90rpx;
  font-size:0rpx;
  padding:0rpx;
  border:0px;
  border-radius: 45rpx;
  background-color:transparent;
}
.horizon{
  margin-left:30rpx;
  margin-right:40rpx;
  position: relative;
  top:45rpx;
  z-index:-1;
  height:1px;
  background-color: #ccc;
}

.detail{
  color:#666;
  margin-left:30rpx;
  margin-top:20rpx;
  margin-right:30rpx;
  line-height: 44rpx;
  letter-spacing: 4rpx;
  margin-bottom:40rpx;
}

