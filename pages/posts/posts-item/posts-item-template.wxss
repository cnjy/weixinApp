/*文章列表*/
.article-item{
  display:flex;
  flex-direction: column;
  margin-top:20rpx;
  margin-bottom:40rpx;
  border-top:1px solid #ccc;
  border-bottom:1px solid #ccc;
  background-color:#fff;
}

.article-avatar-date{
  margin-top:10rpx;
}
.article-avatar{
  margin-left:10rpx;
  width:60rpx;
  height:60rpx;
  vertical-align: middle;
}
.article-date{
  margin-left:20rpx;
  color:#999;
  vertical-align: middle;
}
.article-title{
  margin-top:20rpx;
  margin-left:10rpx;
  font-size:32rpx;
  font-weight: bold;
  color:#333;
}

.article-image{
  margin-top:20rpx;
  width:100%;
  height:340rpx;
}

.article-content{
  padding:0rpx 10rpx;
  font-size:28rpx;
}

.article-link{
  display:flex;
  margin-top:20rpx;
  margin-bottom:10rpx;
}

.article-link-image{
  margin-left:10rpx;
  margin-right:10rpx;
  width:32rpx;
  height:32rpx;
  vertical-align: middle;
}
.article-link-text{
  margin-right:20rpx;
  vertical-align: middle;
}
